<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:assets="clr-namespace:TagHierarchyManager.UI.Assets"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="160"
        Width="500" Height="160"
        x:Class="TagHierarchyManager.UI.Views.DatabaseSettingsWindow"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Title="Settings - {0}">
    <StackPanel Margin="5">
        <TextBlock Margin="0 0 0 25" Text="{x:Static assets:Resources.DatabaseSettingsDbVersion}" />
        <TextBlock Text="{x:Static assets:Resources.DatabaseSettingsDefaultTagBindings}" />
        <TextBox Name="DefaultTagBindingTextBox" Watermark="{x:Static assets:Resources.WatermarkTagBindings}" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 25 0 0 ">
            <Button Margin="0 0 5 0" Content="{x:Static assets:Resources.ButtonCancel}" />
            <Button Content="{x:Static assets:Resources.ButtonOk}" />
        </StackPanel>
    </StackPanel>
</Window>
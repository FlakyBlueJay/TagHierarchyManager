<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="160"
        Width="500" Height="160"
        x:Class="TagHierarchyManager.UI.DatabaseSettingsWindow"
        Title="Settings - ">
    <StackPanel Margin="5">
        <TextBlock Margin="0 0 0 25">Version: 0</TextBlock>
        <TextBlock>
            Default tag binding:
        </TextBlock>
        <TextBox Name="DefaultTagBindingTextBox" Watermark="Tag bindings (separated by semi-colons, e.g. genre; style)"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 25 0 0 ">
            <Button Margin="0 0 5 0" >Cancel</Button>
            <Button>OK</Button>
        </StackPanel>
    </StackPanel>
</Window>
